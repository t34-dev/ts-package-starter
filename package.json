{
  "name": "@well-do-it-too/ts-universal-package",
  "version": "1.0.2",
  "description": "A universal TypeScript package template for creating libraries compatible with React, Node.js, and web projects",
  "main": "dist/index.min.js",
  "module": "dist/index.esm.min.js",
  "unpkg": "dist/index.min.js",
  "jsdelivr": "dist/index.min.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky",
    "clean": "shx rm -rf node_modules pnpm-lock.yaml",
    "rmdist": "shx rm -rf dist",
    "build": "rollup -c",
    "test": "vitest",
    "lint": "eslint \"{src,test,scripts}/**/*.ts\" \"*.json\"",
    "format": "prettier --write \"{src,test,scripts}/**/*.ts\" \"*.json\"",
    "check": "npm run lint && prettier --check \"{src,test,scripts}/**/*.ts\" \"*.json\"",
    "version-up": "node scripts/version.js",
    "pre-commit": "npm run format && npm run check",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "starter",
    "node",
    "ts",
    "react",
    "husky",
    "web",
    "eslint",
    "prettier",
    "universal",
    "typescript",
    "package"
  ],
  "engines": {
    "node": ">= 18 < 21"
  },
  "author": "Vitalii Rozhkov <welldoittoo@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Well-do-it-too/ts-universal-package.git"
  },
  "bugs": {
    "url": "https://github.com/Well-do-it-too/ts-universal-package/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/Well-do-it-too/ts-universal-package#readme",
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "rollup": "^2.75.6",
    "rollup-plugin-terser": "^7.0.2",
    "shx": "^0.3.4",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3",
    "vitest": "^2.0.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "prettier": "^3.3.3"
  }
}
